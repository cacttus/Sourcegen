<Window x:Name="_frmTextEditor" x:Class="sourcegen.TextEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sourcegen"
        mc:Ignorable="d"
        Title="Edit Text" Height="376.923" Width="438.461" Icon="logo_sm.png">
    <Grid Margin="0,0,0,23">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox AcceptsReturn="True" VerticalScrollBarVisibility="Visible" x:Name="_textBox" Margin="10,10,10,34" TextWrapping="Wrap"/>
        <Button x:Name="_btnOk" Content="Ok" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Margin="0,0,218,9" Click="_btnOk_Click"/>
        <Button x:Name="_btnCancel" Content="Cancel" HorizontalAlignment="Right" Width="75" Margin="0,0,138,9" Height="20" VerticalAlignment="Bottom" Click="_btnCancel_Click"/>
        <Label Content="*Note: $ is replaced with spaces or tabs during file generation." HorizontalAlignment="Left" Margin="10,0,0,-22" Height="26" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
